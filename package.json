{
  "name": "pkgplay",
  "version": "0.0.29",
  "description": "A package to inline the package.json file and use small single files for js automation and simple tasks.",
  "keywords": [
    "inline",
    "package.json"
  ],
  "license": "MIT",
  "author": "Roee Shapira",
  "exports": {
    "default": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "bin": "./dist/bin.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "webpack",
    "build:prod": "webpack --env.prod",
    "clean": "rimraf dist/ .eslintcache",
    "format": "prettier --write \"src/**/*\"",
    "lint": "eslint --cache --fix \"src/**/*\"",
    "lintstaged": "lint-staged",
    "prepare": "run-s clean lint format build:prod test",
    "start": "node dist/bin.js",
    "test": "jest",
    "test:change": "jest --onlyChanged",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "postversion": "git push --tags --no-verify"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lintstaged test:change",
      "pre-push": "run-s build:prod test"
    }
  },
  "lint-staged": {
    "**/package.json": "sort-package-json",
    "src/**/*.{js,ts}": "eslint --cache --fix",
    "src/**/*.{ts,js}": "prettier --write"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.44.0",
    "ts-jest": "^26.2.0",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
