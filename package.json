{
  "name": "pkgplay",
  "version": "0.0.17",
  "description": "A package to inline the package.json file and use small single files for js automation and simple tasks.",
  "keywords": [
    "inline",
    "package.json"
  ],
  "license": "MIT",
  "author": "Roee Shapira",
  "main": "src/index.js",
  "bin": {
    "pkgplay": "./dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "webpack",
    "build:prod": "webpack --env.prod",
    "clean": "rimraf dist/ .eslintcache",
    "format": "prettier --write \"src/**/*\"",
    "lint": "eslint --cache --fix \"src/**/*\"",
    "prepare": "run-s clean build:prod lint format test",
    "start": "node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "run-s build:prod test"
    }
  },
  "lint-staged": {
    "**/package.json": "sort-package-json",
    "src/**/*.{js,ts}": "eslint --cache --fix",
    "src/**/*.{ts,js}": "prettier --write"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.42.2",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.4",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
